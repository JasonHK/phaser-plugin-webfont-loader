{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "google",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4],
        "new-cap": ["error", {
            "capIsNewExceptions": [
                "IsPlainObject"
            ]
        }],
        "no-trailing-spaces": "warn",
        "no-unused-vars": "warn",
        "object-curly-spacing": ["warn", "always"],
        "padded-blocks": "off",
        "quotes": ["error", "double", {
            "allowTemplateLiterals": true
        }],
        "require-jsdoc": "off",
        "valid-jsdoc": "warn"
    }
}