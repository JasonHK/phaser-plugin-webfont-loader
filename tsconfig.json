{
    "compilerOptions": {
        "target": "es2015",
        "module": "commonjs",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "lib",
        "paths": {
            "*": [
                "*",
                "node_modules/*",
                "src/types/*",
            ],
        },
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "checkJs": false,
        "declaration": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": false,
        "removeComments": true,
        "sourceMap": true,
    },
    "files": [
        "src/index.ts",
    ],
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "src/**/*.spec.ts",
    ]
}