{
    "compilerOptions": {
        "target": "esnext",
        "module": "es2015",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "paths": {
            "*": [
                "*",
                "node_modules/*"
            ]
        },
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "checkJs": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "preserveConstEnums": false,
        "removeComments": true,
        "sourceMap": true,
    },
    "files": [
        "src/plugin.js"
    ]
}